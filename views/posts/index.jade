extends ../layout

block content
  .container
    h1.page-header 마음에 드는 숙소를 확인하세요♥♥♥♥
    
      h3 원하는 도시를 선택 하세요♥♥♥♥♥
      .form-group
      select.form-control(name='category')
        option(value='서울', selected) 서울
        option(value='경기') 경기
          option(value='인천') 인천
          option(value='강원') 강원
          option(value='대전') 대전
          option(value='세종') 세종
          option(value='충남') 충남
          option(value='충북') 충북
          option(value='부산') 부산
          option(value='울산') 울산
          option(value='경남') 경남
          option(value='경북') 경북
          option(value='대구') 대구
          option(value='광주') 광주
          option(value='전남') 전남
          option(value='전북') 전북
          option(value='제주') 제주

    h3 원하는 숙소를 선택하세요♥♥♥♥
      //- | total #{pagination.numPosts} posts 

    table.table.table-bordered
      thead
        tr
          th 이메일
          th 제목
          th 날짜
          th 조회수
          th city
      tbody
       each post in posts
          tr
            td= post.email
            td
              a(href='/posts/#{post.id}')= post.title
            td= moment(post.createdAt).format('YYYY-MM-DD HH:mm:ss')
            td= post.read
            td= post.category
            if (currentUser) 
             if currentUser.email == post.email
              td
                a.btn.btn-xs.btn-default(href='/posts/#{post.id}/edit') 수정
                | 
                a.btn.btn-xs.btn-default(data-id=post.id, class='delete') 삭제

    a.btn.btn-primary(href='/posts/new') 숙소 게시


    form#deleteForm(style='display:none', method="POST")
            
    script(type='text/javascript').
      $(".delete").click(function(e) {
        var id = $(e.currentTarget).data('id');
        if (confirm('정말 삭제하시겠습니까?')) {
          $("#deleteForm").attr('action', "/posts/" + id + "?_method=DELETE").submit();          
        }
        return false;
      });
            
